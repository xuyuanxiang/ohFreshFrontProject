<form id="formOrder" class="list-group form-horizontal" role="form" method="post">
    <div class="panel panel-success row">
        <div class="panel-heading">
            <h4 class="panel-title">已选购商品</h4>
        </div>
        <div class="panel-body">
            <div class="list-group-item form-group">
                <label class="col-xs-4 control-label">名称：</label>
                <input id="orderCreateInputProductId" type="hidden" value="<%= productId %>">

                <div class="col-xs-8">
                    <input id="orderCreateInputProductName" class="form-control disabled" disabled
                           value="<%= productName %>">
                </div>
            </div>
            <div class="list-group-item form-group">
                <label class="col-xs-4 control-label">单价：</label>

                <div class="col-xs-8">
                    <input id="orderCreateInputProductPrice" class="form-control disabled" disabled
                           value="<%= productPrice %>">
                </div>
            </div>
            <div class="list-group-item form-group">
                <label class="col-xs-4 control-label">数量：</label>

                <div class="col-xs-8">
                    <input id="orderCreateInputNumber" type="number" class="form-control" name="count"
                           value="<%= productCount %>" min="1" required/>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-success row">
        <div class="panel-heading">
            <h4 class="panel-title">收货人信息</h4>
        </div>
        <div class="panel-body">
            <div class="list-group-item form-group">
                <label for="inputMobile">手机号：</label>
                <label class="control-label" for="inputMobile"></label>
                <input id="inputMobile" name="mobilephone" type="tel" class="form-control" placeholder="请输入手机号"
                       required/>
            </div>
            <div class="list-group-item form-group">
                <label for="inputName">姓名：</label>
                <label class="control-label" for="inputName"></label>
                <input id="inputName" name="name" class="form-control" placeholder="请输入真实姓名" required/>
            </div>
        </div>
    </div>
    <div class="panel panel-success row">
        <div class="panel-heading">
            <h4 class="panel-title">收货人地址</h4>
        </div>
        <div class="panel-body">
            <div class="form-group list-group-item">
                <label for="selectCountry">国家</label>
                <select id="selectCountry" name="country" class="form-control">
                </select>
            </div>
            <div class="form-group list-group-item">
                <label for="selectProvince">省市</label>
                <select id="selectProvince" name="province" class="form-control">
                </select>
            </div>
            <div class="form-group list-group-item">
                <label for="selectCity">州市</label>
                <select id="selectCity" name="city" class="form-control">
                </select>
            </div>
            <div class="form-group list-group-item">
                <label for="selectCounty">区县</label>
                <select id="selectCounty" name="county" class="form-control">
                </select>
            </div>
            <div class="form-group list-group-item">
                <label for="inputStreet">街道</label>
                <textarea id="inputStreet" name="homeaddress" class="form-control" required></textarea>
            </div>
        </div>
    </div>
    <div class="panel panel-success row">
        <div class="panel-body">
            <div class="list-group-item form-group">
                <label for="inputStreet">合计：</label>

                <p class="form-control-static text-danger">
                    <span class="fa fa-yen"><%= totalPrice%></span>
                </p>
            </div>
            <div class="list-group-item form-group">
                <button class="btn btn-success btn-block btn-lg" type="submit">完成预订</button>
            </div>
        </div>
    </div>
</form>
